<form action = "/index" method="POST">
  <div>
    <label>Title</label>
    <input type="text" name="title" placeholder="Enter a title" value="<%= @object.title %>">
  </div>
  <div>
    <label>Object Type</label>
    <!-- <input type="text" name="object_type" placeholder="Enter the object type" value="<%= @object.object_type %>"> -->
    <select>
      <option value="<%= @object.object_type %>">Gas Giant</option>
      <option value="<%= @object.object_type %>">Ice Giant</option>
      <option value="<%= @object.object_type %>">Terrestrial Planet</option>
      <option value="<%= @object.object_type %>">Moon</option>
    </select>
  </div>
  <div>
    <label>Radius</label>
    <input type="float" name="radius" placeholder="Enter the radius of the object" value="<%= @object.radius %>">
  </div>
  <div>
    <label>Mass</label>
    <input type="float" name="mass" placeholder="Enter the mass of the object" value="<%= @object.mass %>">
  </div>
  <div>
    <label>Gravity</label>
    <input type="float" name="gravity" placeholder="Enter the gravitational acceleration of the object" value="<%= @object.gravity %>">
  </div>
  <div>
    <label>Planet</label>
    <input type="text" name="planet" placeholder="Enter the planet of the moon" value="<%= @object.radius %>">
  </div>
  <div>
    <input type="submit" value="Save Object">
  </div>
</form>
